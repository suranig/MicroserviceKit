{
  "microserviceName": "OrderService",
  "namespace": "ECommerce.OrderService",
  "outputPath": "./generated",
  
  "architecture": {
    "level": "minimal",  // minimal | standard | enterprise
    "patterns": {
      "ddd": "auto",     // auto | enabled | disabled
      "cqrs": "auto",    // auto | enabled | disabled  
      "eventSourcing": "disabled"
    }
  },

  "features": {
    "api": {
      "style": "minimal",        // minimal | controllers | both
      "authentication": "none",  // none | jwt | oauth
      "documentation": "auto"    // auto | swagger | none
    },
    
    "persistence": {
      "provider": "inmemory",    // inmemory | sqlite | postgresql | sqlserver
      "migrations": "auto",      // auto | enabled | disabled
      "readModel": "same"        // same | separate | redis
    },
    
    "messaging": {
      "enabled": false,
      "provider": "inmemory",    // inmemory | rabbitmq | servicebus
      "patterns": []             // outbox, saga, events
    },
    
    "observability": {
      "logging": "auto",         // auto | serilog | none
      "metrics": "auto",         // auto | prometheus | none  
      "tracing": "disabled"      // disabled | opentelemetry
    },
    
    "deployment": {
      "docker": "auto",          // auto | enabled | disabled
      "kubernetes": "disabled",
      "healthChecks": "auto"
    }
  },

  "domain": {
    "aggregates": [
      {
        "name": "Order",
        "properties": [
          { "name": "CustomerId", "type": "Guid" },
          { "name": "TotalAmount", "type": "decimal" }
        ],
        "operations": ["Create", "AddItem", "Confirm"]  // Generuje Commands
      }
    ],
    "valueObjects": [
      {
        "name": "Money", 
        "properties": [
          { "name": "Amount", "type": "decimal" },
          { "name": "Currency", "type": "string" }
        ]
      }
    ]
  }
} 