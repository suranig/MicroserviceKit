{
  "microserviceName": "OrderService",
  "namespace": "ECommerce.OrderService",
  "outputPath": "./",
  "architecture": {
    "level": "standard",
    "patterns": {
      "ddd": "enabled",
      "cqrs": "enabled",
      "eventSourcing": "disabled"
    }
  },
  "features": {
    "api": {
      "style": "controllers",
      "authentication": "none",
      "documentation": "auto"
    },
    "persistence": {
      "provider": "inmemory",
      "migrations": "auto",
      "readModel": "same"
    },
    "messaging": {
      "enabled": false,
      "provider": "inmemory",
      "patterns": []
    },
    "deployment": {
      "docker": "auto",
      "healthChecks": "auto"
    },
    "testing": {
      "level": "integration",
      "framework": "xunit",
      "mockingEnabled": true,
      "testContainersEnabled": false
    }
  },
  "domain": {
    "aggregates": [
      {
        "name": "Order",
        "properties": [
          {
            "name": "CustomerId",
            "type": "Guid",
            "isRequired": true
          },
          {
            "name": "TotalAmount",
            "type": "decimal",
            "isRequired": true
          },
          {
            "name": "Status",
            "type": "string",
            "isRequired": true
          }
        ],
        "operations": ["AddItem", "RemoveItem", "Confirm", "Cancel"]
      },
      {
        "name": "Customer",
        "properties": [
          {
            "name": "Email",
            "type": "string",
            "isRequired": true
          },
          {
            "name": "Name",
            "type": "string",
            "isRequired": true
          }
        ],
        "operations": ["UpdateEmail", "UpdateName"]
      }
    ],
    "valueObjects": [
      {
        "name": "Money",
        "properties": [
          {
            "name": "Amount",
            "type": "decimal",
            "isRequired": true
          },
          {
            "name": "Currency",
            "type": "string",
            "isRequired": true
          }
        ]
      },
      {
        "name": "Address",
        "properties": [
          {
            "name": "Street",
            "type": "string",
            "isRequired": true
          },
          {
            "name": "City",
            "type": "string",
            "isRequired": true
          },
          {
            "name": "PostalCode",
            "type": "string",
            "isRequired": true
          }
        ]
      }
    ]
  }
} 